          {
            "type": "checkbox",
            "id": "button_style_secondary",
            "default": false,
            "label": "Use outline style"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Content Panels",
        "category": "Custom",
        "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "text"
          },
          {
            "type": "button"
          }
        ]
      }
    ]
  }
{% endschema %}