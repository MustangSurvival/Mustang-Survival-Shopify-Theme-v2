{% capture sizes %}(min-width: 1100px) 100vw, (min-width: 750px) 50vw{% endcapture %}
{% assign preload = true %}
{% if section.index > 2 %}
  {% assign preload = false %}
{% endif %}

<div class='px-pagemargin 2xl:container mt-[26px] lg:mt-[22.5px]'>
  {% render 'image',
    image: section.settings.image,
    sizes: sizes,
    widths: '600, 900, 1100, 1440, 2180',
    preload: preload,
    class: 'w-full',
    alt: section.settings.title
  %}
</div>

{% schema %}
{
  "name": "Statement Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Alt text"
    }
  ],
  "presets": [
    {
      "name": "Statement Image",
      "category": "Custom"
    }
  ]
}
{% endschema %}
