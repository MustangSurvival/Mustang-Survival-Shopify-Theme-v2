{%- capture payment_icons -%}
  {%- if show_payment_icons -%}
    <div>
      <div class="d-flex flex-wrap align-items-center justify-content-center pt-3">
        {%- for type in shop.enabled_payment_types -%}
          <div class="mx-3 mb-3">
            {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
          </div>
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
{%- endcapture -%}

{{ payment_icons }}

<div class='bg-p-light'>
  <div class='px-pagemargin 2xl:container'>
    <div class='py-5 lg:py-7 flex flex-col lg:flex-row lg:justify-between'>
      <div class='flex mt-2.5 lg:my-0.5'>
        {%- if section.settings.menu.links != blank -%}
          <nav class='flex items-center justify-start gap-xs mb-2.5 flex-wrap order-2 lg:mb-0'>
            <p class='flex items-center text-utility lg:justify-center lg:text-center'>
              {{ 'now' | date: '%Y' }}
              {{ 'sections.footer.copyright' | t }}
            </p>

            {% for link in section.settings.menu.links %}
              <a href='{{ link.url }}' class='text-utility{% unless forloop.last %} lg:mr-1{% endunless %}'>
                {{- link.title -}}
              </a>
            {% endfor %}
          </nav>
        {%- endif -%}
      </div>

      <div class='flex mt-2.5 lg:my-0.5'>
        {%- if section.settings.menu.links != blank -%}
          <nav class='flex items-center justify-start gap-xs mb-2.5 flex-wrap order-2 lg:mb-0'>
            {% for link in section.settings.menu.links %}
              <a href='{{ link.url }}' class='text-utility{% unless forloop.last %} lg:mr-1{% endunless %}'>
                {{- link.title -}}
              </a>
            {% endfor %}
          </nav>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Footer Legal",
  "limit": 1,
  "enabled_on": {
    "groups": ["footer"]
  },
  "presets": [
    {
      "name": "Footer Legal"
    }
  ],
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Legal menu",
      "info": "Select a link list to display in the footer."
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Other links",
      "info": "Select a link list to display in the footer."
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true,
      "info": "Display the payment icons in the footer."
    }
  ]
}
{% endschema %}
