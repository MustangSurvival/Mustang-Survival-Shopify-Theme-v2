{%- liquid
  assign slides = section.blocks | where: 'type', 'slide'
  assign klaviyo_personalization_group_id = section.settings.klaviyo_personalization_group_id
  assign klaviyo_pesonalization_enable_group = section.settings.klaviyo_pesonalization_enable_group
  assign cart_attributes = cart.attributes
  assign show_section = false
  assign utm_pers = cart_attributes[settings.klaviyo_utm_personalisation]
  assign allowed_groups = ''
  if klaviyo_pesonalization_enable_group and cart_attributes.size > 0
    if utm_pers != blank
      assign allowed_groups = utm_pers
      assign end_index = cart_attributes.size | minus: 2
      for i in (0..end_index)
        assign group_key = 'segment_' | append: i
        if cart_attributes[group_key] != blank
          assign allowed_groups = allowed_groups | append: ',' | append: cart_attributes[group_key]
        endif
      endfor
    else
      assign end_index = cart_attributes.size | minus: 1
      for i in (0..end_index)
        assign group_key = 'segment_' | append: i
        if cart_attributes[group_key] != blank
          if forloop.first
            assign allowed_groups = allowed_groups | append: cart_attributes[group_key]
          else
            assign allowed_groups = allowed_groups | append: ',' | append: cart_attributes[group_key]
          endif
        endif
      endfor
    endif
  endif
  if klaviyo_personalization_group_id != blank and klaviyo_pesonalization_enable_group
    if allowed_groups contains klaviyo_personalization_group_id
      assign show_section = true
    endif
  endif
-%}

{% if show_section %}
  <swiper-container
    class='block whitespace-nowrap overflow-clip w-full'
    role='region'
    navigation='true'
    loop='true'
    pagination='true'
    slides-per-view='auto'
    {% if section.settings.enable_auto_rotate %}
      autoplay='true'
      autoplay-delay='{{ section.settings.rotate_speed | default: 3 | times: 1000 }}'
    {% endif %}
  >
    {% for block in slides %}
      <swiper-slide
        class='relative w-full aspect-video inline-block whitespace-normal'
        role='group'
        slide-index='{{ forloop.index0 }}'
        aria-roledescription='{{ 'sections.image_carousel.slide' | t }}'
        aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'
        {{ block.shopify_attributes }}
      >
        {% if block.settings.image != blank %}
          {%- liquid
            assign preload = false
            assign image_loading = 'lazy'

            if section.index < 2 and forloop.index < 2
              assign preload = true
              assign image_loading = 'eager'
            endif
          -%}

          {%- render 'image',
            image: block.settings.image,
            loading: image_loading,
            preload: preload,
            sizes: '100vw',
            widths: '320, 640, 960, 1280, 1600, 1920',
            class: 'inset-0 w-full h-full'
          -%}
        {% else %}
          <div class='inset-0 w-full h-full'>
            {{ 'lifestyle-2' | placeholder_svg_tag: 'w-full h-full' }}
          </div>
        {% endif %}

        <div class='{{ block.settings.text_color }} {{ block.settings.alignment }} absolute inset-0 w-full h-full py-pagemargin grid grid-cols-1 items-center container'>
          <div class='grid grid-cols-1 gap-y-xs {{ block.settings.alignment }} md:max-w-[50%]'>
            {% if block.settings.title != blank %}
              <h2 class='h2 text-balance'>
                {{ block.settings.title | newline_to_br }}
              </h2>
            {% endif %}

            {% if block.settings.subtitle != blank %}
              <h3 class='h5 text-balance'>
                {{ block.settings.subtitle | newline_to_br }}
              </h3>
            {% endif %}

            {% if block.settings.link_label != blank %}
              <a
                variant='tertiary'
                class='underline hover:decoration-2 underline-offset-4 {{ block.settings.text_color }}'
                href='{{ block.settings.link }}'
              >
                {{ block.settings.link_label | escape }}
              </a>
            {% endif %}
          </div>
        </div>
      </swiper-slide>
    {% endfor %}
  </swiper-container>
{% endif %}

