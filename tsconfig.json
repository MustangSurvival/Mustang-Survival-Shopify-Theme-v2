{
  "include": [
    "src/custom_typings/window.d.ts",
    "node_modules/@webcomponents/webcomponentsjs/webcomponents-bundle.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "custom_typings/**/*.ts",
    "node_modules/@webcomponents/webcomponentsjs/webcomponents-bundle.d.ts",
    "src/**/*.ts"
 ],
 "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext.array", "esnext", "es2017", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./assets",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
